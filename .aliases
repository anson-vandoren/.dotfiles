#!/bin/env zsh

alias vim=nvim

alias top=htop

alias ls='lsd --hyperlink=auto'

alias dig=dog

alias curl=curlie

alias find=fd

alias cat=bat

alias cp=xcp

alias la='ls -Flah'

alias lg=lazygit

# ask before overwriting and show each file copied
alias cp='cp -iv'
alias mv='mv -iv'

alias zshrc='$EDITOR ~/.zshrc'
alias vimrc='$EDITOR ~/.vimrc'

alias reload='exec ${SHELL} -l'

# print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

alias fuckthis='git commit -m "$(curl http://whatthecommit.com/index.txt)"'
alias fuckit=fuckthis
alias gce='gh copilot explain'

alias gbp="git branch -vv | grep ': gone]' | awk '{print \$1}' | xargs git branch -D ; git branches"

alias skip='git update-index --skip-worktree'
alias unskip='git update-index --no-skip-worktree'
alias mg='kitty +kitten hyperlinked_grep --smart-case "$@"'
